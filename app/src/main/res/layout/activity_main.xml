<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#230D47A1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Banner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:background="#6B986D"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Expenses Tracker"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />



    <TextView
        android:id="@+id/noDataText"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/roboto_bold"
        android:text = ""
        android:gravity="center"
        android:textColor="#6B986D"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/totalCategoriesInfo"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="#4B906D"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/totalExpensesInfo"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="#4B906D"
            android:textSize="25sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/budgetText"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="440dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text=""
        android:textColor="#980B0B"
        android:textSize="17sp" />

    <Button
        android:id="@+id/updateexpensesbutton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:backgroundTint="#6B986D"
        android:fontFamily="@font/roboto_bold"
        android:text="Update Expenses"
        android:textSize="22sp" />

    <Button
        android:id="@+id/updatebudgetbutton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="615dp"
        android:backgroundTint="#6B986D"
        android:fontFamily="@font/roboto_bold"
        android:text="Update Budget"
        android:textSize="22sp" />

</RelativeLayout>