<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#230D47A1"
    tools:context=".BudgetActivity">

    <TextView
        android:id="@+id/Banner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:background="#6B986D"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Expenses Tracker"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_bold"
        android:text="Type the name of an existing category."
        android:textColor="#6B986D"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/enteredName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:inputType="text"
        android:hint="Enter Category Name"
        android:textColor="#6B986D"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_bold"
        android:text="Type your budget for this category."
        android:textColor="#6B986D"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/enteredBudget"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:inputType="number"
        android:hint="Enter Budget Amount"
        android:textColor="#6B986D"
        android:textSize="20sp"
        />


    <Button
        android:id="@+id/updateBudgetButtonB"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:backgroundTint="#6B986D"
        android:fontFamily="@font/roboto_bold"
        android:text="Update"
        android:textSize="22sp"  />

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="570dp"
        android:backgroundTint="#6B986D"
        android:fontFamily="@font/roboto_bold"
        android:text="Cancel"
        android:textSize="22sp"  />


</RelativeLayout>